@model Web.Viewmodels.Quiz.TestVM

@{
    ViewData["Title"] = "Quiz";
    Layout = "_Layout";
}

<!-- Heading -->
@*<div class="text-center w-100">
    <h1 class="mt-4" id="readme">Test your <b>knowledge</b></h1>
</div>*@
<div class="d-flex flex-column w-100">

<h1 class="text-center mb-5" style="margin-top: -50px;"> Test your <b>knowledge</b></h1>

<div id="ajaxDiv"></div>

</div>
@{
    var route = $"/Quiz/GetNextQuestion?TestId={@Model.Id}";
}

<input hidden id="route" value="@route">

@section Scripts{
<script>
    var route = '@route';
    route += '&isInitial=true'
    $( document ).ready(function() {
        $.get(route
            ,
            function (result) {
                $(ajaxDiv).html(result);
            });
});

</script>
}